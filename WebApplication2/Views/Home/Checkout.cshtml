@using WebApplication2.Models.Home;
@{
    ViewBag.Title = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <h2>Checkout</h2>
    @if (Session["cart"] == null)
    {
        <div class="alert alert-danger">
            <strong>No product added to cart!</strong>
        </div>

    }
    else
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Quantity</th>
                    <th>Add</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Item item in (List<Item>)Session["cart"])
                {
                    <tr>
                        <td>@item.urun.urunAdi</td>
                        <td>@item.miktar</td>
                        <td>
                            <a href="@Url.Action("AddToCart", "Home", new { productId = item.urun.urunId, url = "Checkout" })">
                                <i class="fa fa-plus"></i>
                            </a>
                            <a href="@Url.Action("MiktarAzalt", "Home", new { productId = item.urun.urunId })">
                                <i class="fa fa-minus"></i>
                            </a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
        <a class="btn btn-success" href="@Url.Action("CheckoutDetay", "Home")">Checkout >></a>

    }

