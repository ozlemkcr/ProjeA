@model WebApplication2.DAL.kategoriTable

@{
    ViewBag.Title = "Kategori Sil";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Kategoriyi silmek istediğinize emin misiniz?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <label class="control-label col-md-5">Kategori Adı</label>
        </dt>

        <dd>
            <div class="col-md-6">
                @Html.DisplayFor(model => model.kategoriAdi)
            </div>
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-primary" />
        </div>
    }
</div>
