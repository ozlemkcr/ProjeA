@model WebApplication2.DAL.uyeTable

@{
    ViewBag.Title = "UyeEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Üye Ekle</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class="control-label col-md-5">Üyenin Adı</label>
        <div class="col-md-6">
            @Html.EditorFor(model => model.uyeAd, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.uyeAd, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-5">Üyenin Soyadı</label>
        <div class="col-md-6">
            @Html.EditorFor(model => model.uyeSoyad, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.uyeSoyad, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-5">Üyenin E-Maili</label>
        <div class="col-md-6">
            @Html.EditorFor(model => model.uyeEmail, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.uyeEmail, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-5">Üyenin Şifresi</label>
        <div class="col-md-6">
            @Html.EditorFor(model => model.uyePass, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.uyePass, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-5">Üyenin Rolü</label>
        <div class="col-md-6">
            @Html.EditorFor(model => model.uyeRol, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.uyeRol, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Ekle" class="btn btn-primary" />
        </div>
    </div>
</div>
}
